{
  "name": "virtual-library-app",
  "version": "1.0.0",
  "description": "A virtual library application with AI integration and payment processing.",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build-client": "npm install --prefix client && npm run build --prefix client",
    "postinstall": "npm run build-client",
    "build-server": "npm install --prefix server && npm run build --prefix server",
    "postinstall-server": "npm run build-server"
  },


