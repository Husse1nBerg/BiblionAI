    "bcrypt": "^5.1.1",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "openai": "^4.47.1",
    "pg": "^8.11.5",
    "stripe": "^15.8.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.1"
  }
}